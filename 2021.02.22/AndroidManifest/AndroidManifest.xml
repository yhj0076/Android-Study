<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinsample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.KotlinSample">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity 의 label 은 기본 제목으로 사용됩니다. -->
        <activity
            android:name=".BmiKotlinActivity"
            android:label="BmiKotlinActivity" />
        <activity
            android:name=".BmiJavaActivity"
            android:label="BmiJavaActivity" />
        <activity android:name=".VariableKotlinActivity"
            android:label="VariableKotlin"
            />
        <activity android:name=".VariableJavaActivity"
            android:label="VariableJava"/>

    </application>

</manifest>