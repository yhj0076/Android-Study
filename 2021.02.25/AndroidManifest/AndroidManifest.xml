<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kotlinsample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="24"
        android:targetSdkVersion="30" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.KotlinSample" >
        <activity android:name="com.example.kotlinsample.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Activity 의 label 은 기본 제목으로 사용됩니다. -->
        <activity
            android:name="com.example.kotlinsample.BmiKotlinActivity"
            android:label="BmiKotlinActivity" />
        <activity
            android:name="com.example.kotlinsample.BmiJavaActivity"
            android:label="BmiJavaActivity" />
        <activity
            android:name="com.example.kotlinsample.VariableKotlinActivity"
            android:label="VariableKotlin" />
        <activity
            android:name="com.example.kotlinsample.VariableJavaActivity"
            android:label="VariableJava" />
        <activity
            android:name="com.example.kotlinsample.ControlKotlinActivity"
            android:label="ControlKotlin" />
        <activity
            android:name="com.example.kotlinsample.ControlJavaActivity"
            android:label="ControlJava" />
    </application>

</manifest>